<h1>Add a new patient</h1>

<%= form_for(@patient) do |f| %> 

<%= f.label :name, "Patient Name" %>
<%= f.text_field :name %>
<br><br><br>


<div> 
<h3>To add a medication for the patient, select a medication from the drop down or create a new one</h3>
<%=f.fields_for :medications do |m| %>
<%= m.label :name, "Medication Name" %>
<%= m.collection_select :name_id, Medication.all, :id, :name, prompt: true%>

<h4>Create a new medication</h4>
  <%=f.fields_for :medication do |m| %>
  <% m.label :name %>
  <% m.text_field :name %>
  <% end %>
<br>
<br>
<%= m.label :quantity %>
<%= m.text_field :quantity %>
<br>
<br>
<%= m.label :frequency %>
<%= m.text_field :frequency %>


<h4>Reason for medication</h4>
 <%=f.fields_for :illnesses do |i| %>
  <% i.label :illness %>
  <% i.text_field :illness %>
 <% end %>

<% end %>
</div>
<br>
<%= f.submit "Add a patient" %>

<% end %>