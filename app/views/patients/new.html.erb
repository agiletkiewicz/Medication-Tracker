   <%# <%= render 'form', title: "Add a New Patient" %>
<h1>Add a new patient</h1>
<%= form_with(model: @patient, local: true) do |f| %> 
  <%= f.label :name, "Patient Name" %>
  <%= f.text_field :name %>
  <br><br><br>
   
    <%= f.fields_for :illnesses do |i|%>
      <%# should be like description  %> 
      <%= i.label :illness, "Illness Description"%>
      <%= i.text_field :illness %> 

  <h3>To add a medication for the patient, select a medication from the drop down or create a new one</h3>

      <%= i.label :medication_id, 'Medication'%>
      
      <%= i.collection_select :medication_id, @medications, :id, :name, include_blank: true %>
      <h4>Or create a new medication</h4>
      <%= i.fields_for :medications do |m| %>
        <%= m.text_field :name %>
        <%= m.number_field :frequency %>
        <%= m.number_field :quantity %>
      <% end %>
      <%# <%= i.fields_for :medication_attributes do |m| %>
  <% end %>
    <br>
    <br>
  <%= f.submit "Add a patient" %>
<% end %>
    
    







