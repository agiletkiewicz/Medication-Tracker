<h1><%= title %></h1>

 <%= form_with(model: @patient, local: true) do |f| %> 
    <%= f.label :name, "Patient Name" %>
    <%= f.text_field :name %>
    <br><br><br>
   
  <div> 
    <%= f.fields_for :illnesses do |i|%>
      <%= i.label :illness, "Illness Description"%>
      <%= i.text_field :illness %> 

      <h4>Select a medication from the drop down or create a new medication</h4>
        <%= f.label :name, "Medication Name" %>
        <%# <%= i.collection_select :medication_id, @medications, :id, :name, include_blank: true %> 
        <%= i.label :medication_id, 'Medication'%>
        <%= i.fields_for :medication do |m| %>
        <%= m.text_field :name %><br><br>
        
          <%= i.label :frequency, "Frequency"%>
          <%= m.number_field :frequency %>
          <%= i.label :quantity, "Quantity"%>
          <%= m.number_field :quantity %>
      <% end %>
      
  <% end %>
    <br>
    <br>
  <%= f.submit "submit" %>
<% end %>
